{
  "extends": ["config:base"],
  "prHourlyLimit": 1,
  "dependencyDashboard": true,
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchPackagePatterns": ["bootstrap", "bootswatch"],
      "groupName": "bootstrap"
    },
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 2
    }
  ]
}
