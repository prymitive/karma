{
  "extends": ["config:base", "schedule:weekly"],
  "prHourlyLimit": 1,
  "dependencyDashboard": true,
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false,
      "platformAutomerge": false
    },
    {
      "matchPackagePatterns": ["bootstrap", "bootswatch"],
      "groupName": "bootstrap"
    }
  ]
}
